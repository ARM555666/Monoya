        function addToCart(name, price) {
            cart.push({ name, price });
            updateCart();
            alert(`‡πÄ‡∏û‡∏¥‡πà‡∏° ${name} ‡∏•‡∏á‡πÉ‡∏ô‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤‡πÅ‡∏•‡πâ‡∏ß!`);
        }

        function updateCart() {
            const cartItems = document.getElementById('cart-items');
            const cartTotal = document.getElementById('cart-total');
            const cartCount = document.getElementById('cart-count');

            cartItems.innerHTML = '';
            let total = 0;

            if (cart.length === 0) {
                const emptyMessage = document.createElement('li');
                emptyMessage.className = 'list-group-item text-center text-muted';
                emptyMessage.textContent = '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤‡πÉ‡∏ô‡∏ï‡∏∞‡∏Å‡∏£‡πâ‡∏≤';
                cartItems.appendChild(emptyMessage);
            } else {
                cart.forEach((item, index) => {
                    total += item.price;
                    const li = document.createElement('li');
                    li.className = 'list-group-item d-flex justify-content-between align-items-center bg-secondary text-white';
                    li.innerHTML = `
                        <span>${item.name} - ‡∏ø${item.price.toLocaleString()}</span>
                        <button class="btn btn-sm btn-danger" onclick="removeItem(${index})">‡∏•‡∏ö</button>
                    `;
                    cartItems.appendChild(li);
                });
            }

            cartTotal.textContent = `‡∏ø${total.toLocaleString()}`;
            cartCount.textContent = cart.length;
        }

        function togglePaymentFields() {
            const selectedMethod = paymentMethodSelect.value;
            bankTransferFields.style.display = 'none';
            creditCardFields.style.display = 'none';

            if (selectedMethod === 'bankTransfer') {
                bankTransferFields.style.display = 'block';
            } else if (selectedMethod === 'creditCard') {
                creditCardFields.style.display = 'block';
            }
        }

        async function sendDiscordNotification(order) {
            const embedFields = [
                { name: '‡∏ä‡∏∑‡πà‡∏≠‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤', value: order.customerName, inline: true },
                { name: '‡πÄ‡∏ö‡∏≠‡∏£‡πå‡∏ï‡∏¥‡∏î‡∏ï‡πà‡∏≠', value: order.customerPhone, inline: true },
                { name: '‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡∏à‡∏±‡∏î‡∏™‡πà‡∏á', value: order.customerAddress },
                { name: '‡∏¢‡∏≠‡∏î‡∏£‡∏ß‡∏°', value: `‡∏ø${order.total.toLocaleString()}`, inline: true },
                { name: '‡∏ä‡πà‡∏≠‡∏á‡∏ó‡∏≤‡∏á‡∏Å‡∏≤‡∏£‡∏ä‡∏≥‡∏£‡∏∞‡πÄ‡∏á‡∏¥‡∏ô', value: order.payment.method, inline: true }
            ];

            // Add payment specific details
            if (order.payment.method === 'Bank Transfer') {
                embedFields.push({ name: '‡∏´‡∏•‡∏±‡∏Å‡∏ê‡∏≤‡∏ô‡∏Å‡∏≤‡∏£‡πÇ‡∏≠‡∏ô', value: order.payment.attachment ? `[‡∏Ñ‡∏•‡∏¥‡∏Å‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏î‡∏π‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û](${order.payment.attachment})` : '‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏´‡∏•‡∏±‡∏Å‡∏ê‡∏≤‡∏ô‡∏Å‡∏≤‡∏£‡πÇ‡∏≠‡∏ô', inline: false });
            } else if (order.payment.method === 'Credit Card (Simulated)') {
                embedFields.push(
                    { name: '‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£ (4 ‡∏´‡∏•‡∏±‡∏Å‡∏™‡∏∏‡∏î‡∏ó‡πâ‡∏≤‡∏¢)', value: order.payment.cardNumber, inline: true },
                    { name: '‡∏ä‡∏∑‡πà‡∏≠‡∏ö‡∏ô‡∏ö‡∏±‡∏ï‡∏£', value: order.payment.cardHolderName, inline: true }
                );
            }

            const discordMessage = {
                username: "Mono-ya Order Bot",
                avatar_url: "https://via.placeholder.com/50/a8dadc/1d3557?text=üõí", // You can change this to a suitable icon
                embeds: [
                    {
                        title: "üéâ ‡∏Ñ‡∏≥‡∏™‡∏±‡πà‡∏á‡∏ã‡∏∑‡πâ‡∏≠‡πÉ‡∏´‡∏°‡πà‡∏à‡∏≤‡∏Å Mono-ya!",
